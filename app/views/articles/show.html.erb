<div class="d-flex justify-content-between navbar">
    <p> <%= link_to 'Wikinimous', articles_path %> </p>
    <p> <%= link_to 'New Article', new_article_path %> </p>
</div>

<div class="container article">
  <h1> <%= @article.title %>
    <%= link_to image_tag('trash.svg'), article_path(@article),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    <%= link_to image_tag('pencil.svg'), edit_article_path(@article) %></h1>
  <p> <%= @article.content %> </p>
</div>


