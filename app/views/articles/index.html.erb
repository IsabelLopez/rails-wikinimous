<div class="box">

  <div class="d-flex justify-content-between navbar">
    <p> <%= link_to 'Wikinimous', articles_path %> </p>
    <p> <%= link_to 'New Article', new_article_path %> </p>
  </div>

  <div class="articles">
    <ul>
      <% @articles.each do |article| %>
        <li class="d-flex flex-column container">
          <h1 class="text-left"> <%= link_to article.title, article_path(article) %>  </h1>
          <p class="text-left">  <%= article.content %>  </p>
        </li>
      <% end %>
    </ul>
  </div>

</div>
